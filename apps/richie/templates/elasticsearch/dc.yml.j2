apiVersion: v1
kind: DeploymentConfig
metadata:
  labels:
    app: richie
    service: elasticsearch
    version: "{{ richie_elasticsearch_image_tag }}"
    deployment_stamp: "{{ deployment_stamp }}"
  name: "elasticsearch-{{ deployment_stamp }}"
  namespace: "{{ project_name }}"
spec:
  replicas: 1
  selector:
    app: richie
    deploymentconfig: "elasticsearch-{{ deployment_stamp }}"
  template:
    metadata:
      labels:
        app: richie
        service: elasticsearch
        version: "{{ richie_elasticsearch_image_tag }}"
        deploymentconfig: "elasticsearch-{{ deployment_stamp }}"
        deployment_stamp: "{{ deployment_stamp }}"
    spec:
      containers:
        - image: {{ richie_elasticsearch_image_name }}:{{ richie_elasticsearch_image_tag }}
          name: elasticsearch
          ports:
            - containerPort: {{ richie_elasticsearch_port }}
              protocol: TCP
