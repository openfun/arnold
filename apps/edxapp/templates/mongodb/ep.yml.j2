apiVersion: v1
kind: Endpoints
metadata:
  labels:
    app: edxapp
    endpoint: mongodb
  # name of the endpoint should be the same as the corresponding service
  name: "{{ edxapp_mongodb_host }}"
  namespace: "{{ project_name }}"
subsets:
  - addresses:
    - ip: {{ endpoint_mongodb_ip }}
    ports:
    - port: "{{ edxapp_mongodb_port }}"
      name: "{{ edxapp_mongodb_port}}-tcp"
