apiVersion: v1
kind: Service
metadata:
  labels:
    app: hello
    deployment_stamp: "{{ deployment_stamp }}"
  name: "hello-app-{{ deployment_stamp }}"  # name of the service should be host name in nginx
  namespace: "{{ namespace_name }}"
spec:
  ports:
  - name: {{ hello_app_port }}-tcp
    port: {{ hello_app_port }}
    protocol: TCP
    targetPort: {{ hello_app_port }}
  selector:
    deployment: "hello-app-{{ deployment_stamp }}"
  type: ClusterIP
