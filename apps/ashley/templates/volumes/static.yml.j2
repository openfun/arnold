{% if ashley_should_activate_static_volume %}
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: ashley-pvc-static
  namespace: "{{ project_name }}"
  labels:
    app: ashley
    version: "{{ ashley_image_tag }}"
    deployment_stamp: "{{ deployment_stamp }}"
spec:
  accessModes:
  - ReadWriteMany
  resources:
    requests:
      storage: {{ ashley_static_volume_size }}
{% endif %}
