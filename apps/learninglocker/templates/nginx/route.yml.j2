apiVersion: v1
kind: Route
metadata:
  namespace: "{{ project_name }}"
  name: "learninglocker-nginx"
  labels:
    env_type: "{{ env_type }}"
    customer: "{{ customer }}"
    app: "learninglocker"
    service: "nginx"
    version: "{{ learninglocker_nginx_image_tag }}"
  annotations:
    kubernetes.io/tls-acme: "true"
spec:
  host: "{{ learninglocker_host }}"
  tls:
    termination: edge
    insecureEdgeTerminationPolicy: Redirect
  port:
    targetPort: "{{ learninglocker_nginx_port }}-tcp"
  to:
    kind: Service
    name: "learninglocker-nginx"
