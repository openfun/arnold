apiVersion: v1
kind: Route
metadata:
  namespace: "{{ namespace_name }}"
  name: "mailcatcher"
  labels:
    env_type: "{{ env_type }}"
    customer: "{{ customer }}"
    app: "mailcatcher"
    service: "app"
    version: "{{ mailcatcher_image_tag }}"
    route_target_service: "app"
spec:
  host: "{{ mailcatcher_host }}"
  tls:
    termination: edge
    insecureEdgeTerminationPolicy: Redirect
  port:
    targetPort: "{{ mailcatcher_reader_port }}-tcp"
  to:
    kind: Service
    name: "mailcatcher"
