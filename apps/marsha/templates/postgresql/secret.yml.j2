apiVersion: v1
kind: Secret
metadata:
  labels:
    app: marsha
    service: postgresql
  name: "{{ marsha_postgresql_secret_name }}"
  namespace: "{{ project_name }}"
data:
  POSTGRESQL_USER: "{{ MARSHA_VAULT.POSTGRESQL_USER | default('marsha_user') | b64encode }}"
  POSTGRESQL_PASSWORD: "{{ MARSHA_VAULT.POSTGRESQL_PASSWORD | default('pass') | b64encode }}"
