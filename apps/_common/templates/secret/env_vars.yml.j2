apiVersion: v1
kind: Secret
metadata:
  name: "{{ app.name }}-{{ secret_id }}"
  namespace: {{ project_name }}
data:
{% for key, value in env_vars.iteritems() %}
{% if "yml" in key %}
  {{ key }}: "{{ value | to_nice_yaml | b64encode }}"
{% else %}
  {{ key }}: "{{ value | b64encode }}"
{% endif %}
{% endfor %}
