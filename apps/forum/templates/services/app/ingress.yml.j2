apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  namespace: "{{ namespace_name }}"
  name: "forum-{{ prefix }}"
  labels:
    env_type: "{{ env_type }}"
    customer: "{{ customer }}"
    app: "forum"
    service: "app"
    route_prefix: "{{ prefix }}"
    route_target_service: "app"
  annotations:
    cert-manager.io/issuer: "{{ acme_issuer_name }}"
spec:
  rules:
  - host: "{{ forum_host | blue_green_host(prefix) }}"
    http:
      paths:
      - backend:
          service:
            name: "forum-app-{{ prefix }}"
            port:
              number: {{ forum_port }}
        path: /
        pathType: Prefix
  tls:
  - hosts:
    - "{{ forum_host | blue_green_host(prefix) }}"
    secretName: "forum-app-tls-{{ prefix }}-{{ acme_env }}"
