{% if elasticsearch_security_enabled %}
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: "{{ elasticsearch_pvc_bootstrap_name }}"
  namespace: "{{ namespace_name }}"
  labels:
    app: elasticsearch
    version: "{{ elasticsearch_image_tag }}"
    deployment_stamp: "{{ deployment_stamp }}"
spec:
  accessModes:
  - ReadWriteMany
  resources:
    requests:
      storage: {{ elasticsearch_bootstrap_volume_size }}
  storageClassName: "{{ default_storage_class_rwx }}"
{% endif %}
