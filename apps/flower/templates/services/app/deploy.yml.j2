apiVersion: v1
kind: Deployment
metadata:
  labels:
    app: flower
    service: app
    version: "{{ flower_image_tag }}"
    deployment_stamp: "{{ deployment_stamp }}"
  name: "flower-app"
  namespace: "{{ namespace_name }}"
spec:
  replicas: 1
  selector:
    matchLabels:
      app: flower
      service: app
      deployment: "flower-app"
  template:
    metadata:
      labels:
        app: flower
        service: app
        deployment: "flower-app"
    spec:
{% set image_pull_secret_name = flower_image_pull_secret_name | default(none) or default_image_pull_secret_name %}
{% if image_pull_secret_name is not none %}
      imagePullSecrets:
        - name: "{{ image_pull_secret_name }}"
{% endif %}
      containers:
        - image: "{{ flower_image_name }}:{{ flower_image_tag }}"
          name: flower
          workingDir: /app
          command:
            - "/bin/bash"
            - "-c"
            - celery flower -A project
          ports:
            - containerPort: {{ flower_port }}
              protocol: TCP
          envFrom:
            - configMapRef:
                name: "flower-app-dotenv-{{ deployment_stamp }}"
          volumeMounts:
            - mountPath: /app
              name: flower-configmap
      securityContext:
        runAsUser: {{ container_uid }}
        runAsGroup: {{ container_gid }}
      volumes:
        - name: flower-configmap
          configMap:
            defaultMode: 420
            name: flower-app-{{ deployment_stamp }}
