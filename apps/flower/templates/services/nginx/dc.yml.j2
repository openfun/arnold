apiVersion: v1
kind: DeploymentConfig
metadata:
  labels:
    app: flower
    service: nginx
    version: "{{ flower_nginx_image_tag }}"
    deployment_stamp: "{{ deployment_stamp }}"
  name: "flower-nginx"
  namespace: "{{ project_name }}"
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: flower
        service: nginx
        version: "{{ flower_nginx_image_tag }}"
        deployment_stamp: "{{ deployment_stamp }}"
        deploymentconfig: "flower-nginx"
    spec:
{% set image_pull_secret_name = flower_nginx_image_pull_secret_name | default(none) or default_image_pull_secret_name %}
{% if image_pull_secret_name is not none %}
      imagePullSecrets:
        - name: "{{ image_pull_secret_name }}"
{% endif %}
      containers:
        - image: "{{ flower_nginx_image_name }}:{{ flower_nginx_image_tag }}"
          name: nginx
          ports:
            - containerPort: 80
              protocol: TCP
          volumeMounts:
            - mountPath: /etc/nginx/conf.d
              name: flower-v-nginx
              readOnly: true
          livenessProbe:
            httpGet:
              path: "{{ flower_nginx_healthcheck_endpoint }}"
              port: {{ flower_nginx_healthcheck_port }}
            initialDelaySeconds: 60
            periodSeconds: 30
          readinessProbe:
            httpGet:
              path: "{{ flower_nginx_healthcheck_endpoint }}"
              port: {{ flower_nginx_healthcheck_port }}
            initialDelaySeconds: 10
            periodSeconds: 5
      volumes:
        - name: flower-v-nginx
          configMap:
            name: "flower-nginx-{{ deployment_stamp }}"
