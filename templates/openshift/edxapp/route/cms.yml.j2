apiVersion: v1
kind: Route
metadata:
  labels:
    app: "cms-{{ deployment_stamp }}"
    version: "{{ edxapp_tag }}"
    deployment_stamp: "{{ deployment_stamp }}"
  name: "cms-{{ deployment_stamp }}"
  namespace: "{{ project_name }}"
  annotations:
    kubernetes.io/tls-acme: "true"
spec:
  host: {{ cms_host }}
  port:
    targetPort: {{ cms_port }}-tcp
  tls:
    termination: edge
  to:
    kind: Service
    name: "nginx-edxapp-{{ deployment_stamp }}"
    weight: 100
