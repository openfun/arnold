apiVersion: v1
kind: Route
metadata:
  labels:
    app: "richie-{{ deployment_stamp }}"
    version: "{{ richie_tag }}"
    deployment_stamp: "{{ deployment_stamp }}"
  name: "richie-{{ deployment_stamp }}"
  namespace: "{{ project_name }}"
  annotations:
    kubernetes.io/tls-acme: "true"
spec:
  host: {{ richie_host }}
  port:
    targetPort: {{ richie_port }}-tcp
  tls:
    termination: edge
  to:
    kind: Service
    name: "nginx-richie-{{ deployment_stamp }}"
    weight: 100
