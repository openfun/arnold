apiVersion: v1
kind: Route
metadata:
  labels:
    app: hello
  name: hello
  namespace: "{{ project_name }}"
  annotations:
    kubernetes.io/tls-acme: "true" 
spec:
  host: "{{ hello_host }}"
  tls:
    termination: edge
  port:
    targetPort: {{ hello_port }}-tcp
  to:
    kind: Service
    name: hello
    weight: 100
