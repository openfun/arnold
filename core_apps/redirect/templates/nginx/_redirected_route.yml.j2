kind: Route
apiVersion: v1
metadata:
  labels:
    app: redirect
    service: nginx
    version: "{{ redirect_nginx_image_tag }}"
  name: "redirect-{{ redirection_from }}"
  namespace: "{{ project_name }}"
  annotations:
    kubernetes.io/tls-acme: "true"
spec:
  host: "{{ redirection_from }}"
  port:
    targetPort: "{{ redirect_nginx_port }}-tcp"
  to:
    kind: Service
    name: "redirect-nginx"
    weight: 100
  tls:
    termination: edge
    insecureEdgeTerminationPolicy: Redirect
